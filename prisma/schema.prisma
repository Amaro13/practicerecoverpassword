generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      UserRole @default(Pacient)
  crm       String?
  residency String?
  uf        String?
  password  String
  image     String

  recoverPasswordToken String?

  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  Schedule  Schedule[]

  @@map("user")
}

model Horary {
  id        String   @id @default(uuid())
  name      Float    @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  schedule Schedule[]

  @@map("horary")
}

model Schedule {
  id       String   @id @default(uuid())
  scoredAt DateTime @default(now()) @map("favirited_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  horary     Horary @relation(fields: [horaryName], references: [name], onDelete: Cascade)
  horaryName Float  @map("product_name")

  @@unique([userId, horaryName])
  @@map("favorite")
}

enum UserRole {
  Admin
  Pacient
  Doctor
}
